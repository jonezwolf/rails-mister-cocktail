<h1><%= @cocktail.name %></h1>
<ul>
  <% @cocktail.doses.each do |dose|%>
  <li>
    <%= dose.description %> of <%= dose.ingredient.name %>
      <p><%= link_to 'Delete a dose', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></p>
  </li>
  <% end %>
  <p><%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %></p>
  <p><%= link_to 'Back to the list', cocktails_path %>
</ul>

